<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D6FFA6"
    android:orientation="vertical"
    tools:context=".Game2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_200">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/boy" />

        <Switch
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="스크롤하여 선택" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/myBall1"
            android:layout_width="44sp"
            android:layout_height="44sp"
            android:layout_margin="4dp"
            android:background="@drawable/ic_baseline_circle_green"
            android:gravity="center"
            android:text="0"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/myBall2"
            android:layout_width="44sp"
            android:layout_height="44sp"
            android:layout_margin="4dp"
            android:background="@drawable/ic_baseline_circle_purple"
            android:gravity="center"
            android:text="0"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/myBall3"
            android:layout_width="44sp"
            android:layout_height="44sp"
            android:layout_margin="4dp"
            android:background="@drawable/ic_baseline_circle_gray"
            android:gravity="center"
            android:text="0"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/myBall4"
            android:layout_width="44sp"
            android:layout_height="44sp"
            android:layout_margin="4dp"
            android:background="@drawable/ic_baseline_circle_blue"
            android:gravity="center"
            android:text="0"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/myBall5"
            android:layout_width="44sp"
            android:layout_height="44sp"
            android:layout_margin="4dp"
            android:background="@drawable/ic_baseline_circle_red"
            android:gravity="center"
            android:text="0"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/myBall6"
            android:layout_width="44sp"
            android:layout_height="44sp"
            android:layout_margin="4dp"
            android:background="@drawable/ic_baseline_circle_yellow"
            android:gravity="center"
            android:text="0"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="invisible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF06E"
        android:gravity="center">

        <NumberPicker
            android:id="@+id/numberPicker"
            android:layout_width="120dp"
            android:layout_height="120dp" />

        <ImageButton
            android:id="@+id/btn_add"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@android:drawable/ic_input_add" />

        <ImageButton
            android:id="@+id/btn_clear"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@android:drawable/ic_delete" />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_message"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text="숫자를 선택하세요"
        android:textSize="40sp" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:src="@drawable/robot" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/robotBall1"
            android:layout_width="44sp"
            android:layout_height="44sp"
            android:layout_margin="4dp"
            android:background="@drawable/ic_baseline_circle_green"
            android:gravity="center"
            android:text="0"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/robotBall2"
            android:layout_width="44sp"
            android:layout_height="44sp"
            android:layout_margin="4dp"
            android:background="@drawable/ic_baseline_circle_purple"
            android:gravity="center"
            android:text="0"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/robotBall3"
            android:layout_width="44sp"
            android:layout_height="44sp"
            android:layout_margin="4dp"
            android:background="@drawable/ic_baseline_circle_gray"
            android:gravity="center"
            android:text="0"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/robotBall4"
            android:layout_width="44sp"
            android:layout_height="44sp"
            android:layout_margin="4dp"
            android:background="@drawable/ic_baseline_circle_blue"
            android:gravity="center"
            android:text="0"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/robotBall5"
            android:layout_width="44sp"
            android:layout_height="44sp"
            android:layout_margin="4dp"
            android:background="@drawable/ic_baseline_circle_red"
            android:gravity="center"
            android:text="0"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/robotBall6"
            android:layout_width="44sp"
            android:layout_height="44sp"
            android:layout_margin="4dp"
            android:background="@drawable/ic_baseline_circle_yellow"
            android:gravity="center"
            android:text="0"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="visible" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_run"
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:src="@drawable/robot"
        android:text="로또 추첨" />

</LinearLayout>









